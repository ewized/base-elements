{
  "name": "@ewized/base-elements",
  "version": "0.0.19",
  "description": "This contains styled web components that are used to create websites",
  "repository": "https://github.com/ewized/base-elements",
  "private": false,
  "main": "base-elements.bundle.js",
  "module": "index.js",
  "files": [
    "components/",
    "elements/",
    "layouts/",
    "/*.js*",
    "/*.d.ts*",
    "/*.scss"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "dependencies": {
    "@types/showdown": "^1.9.3",
    "code-prettify": "^0.1.0",
    "font-awesome": "^4.7.0",
    "lit-element": "^2.2.1",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^2.9.0",
    "css-loader": "^3.2.0",
    "eslint": "^6.7.2",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.0",
    "serialize-javascript": ">=2.1.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  },
  "scripts": {
    "test": "echo 'No Tests'",
    "build": "tsc && npm run copyscss && npm run copypublic && webpack --mode production",
    "start": "webpack-dev-server --watch --mode development",
    "lint": "eslint src/**.ts",
    "copypublic": "cp -r public/ build/",
    "copyscss": "find ./src -name '**.scss' | awk -F 'src/' '{print \"./src/\"$2, \"./lib/\"$2}' | xargs -n2 cp",
    "package": "npm run build -- -o ./base-elements.bundle.js && cp -R ./lib/* .",
    "prepublish": "npm run lint && npm run package",
    "__release": "npm run lint && npm run build && npm test && npm version patch && git push --tags origin master"
  },
  "keywords": [],
  "author": "ewized",
  "license": "No License"
}
